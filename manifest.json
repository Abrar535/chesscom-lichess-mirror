{
  "manifest_version": 3,
  "name": "Chess Mirror: Chess.com â†’ Lichess",
  "version": "1.0",
  "description": "Automatically mirror moves from Chess.com to Lichess Analysis board.",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/*"],
      "js": ["chess.js", "chesscom.js"]
    },
    {
      "matches": ["*://lichess.org/analysis*"],
      "js": ["lichess.js"]
    }
  ]
}
